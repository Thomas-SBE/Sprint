@font-face {
    font-family: "Atkinson Hyperlegible";
    src: url("./atkinson_bold.ttf");
    font-weight: bold;
}

@font-face {
    font-family: "Atkinson Hyperlegible";
    src: url("./atkinson_regular.ttf");
    font-weight: normal;
}

body
{
    font-family: "Atkinson Hyperlegible";
}

input {
    font-family: "Atkinson Hyperlegible";
}

button {
    font-family: "Atkinson Hyperlegible";
}

select {
    font-style: italic;
    font-family: "Atkinson Hyperlegible";
}

option:checked {
    font-family: "Atkinson Hyperlegible";
}

tr{
    border: 1px solid black;
}

td{
    border: 2px solid black;
}

.rdvbtn
{
    position: relative;
    cursor: default;
    width: 100%;
    background-color: #47b566;
    border: 0;
    padding: 5px;
}


.rdvbtn:hover{
    cursor: pointer;
}